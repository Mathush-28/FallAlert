<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".fragment3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:fontFamily="@font/roboto"
        android:textSize="30sp"
        android:id="@+id/textViewSettings"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Switch
        android:paddingTop="20dp"
        android:id="@+id/switch_sms_alert"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable SMS Alerts         "
        android:thumbTint="#800080"
        android:switchTextAppearance="@font/roboto"
        android:switchMinWidth="60dp"
        android:layout_gravity="center_horizontal"
        android:checked="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:id="@+id/seekbar_sensitivity"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:max="100" />

    <TextView
        android:id="@+id/sensitivity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensitivity: 50"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"/>

</LinearLayout>